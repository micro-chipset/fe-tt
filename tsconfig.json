{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./.build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es5", "es2015", "dom"],
    "paths": {
      "@app/*": ["./*"],
      "@modules/*": [ "modules/*" ],
      "@ui-kit": [ "components" ],
      "@utils/*": [ "utils/*" ],
      "@hooks": [ "hooks" ],
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ]
}
